 {
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "mix",
    "tasks": [
        {
            "label": "compile",
            "args": [
                "compile"
            ],
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": [
                "$mixCompileError",
                "$mixCompileWarning"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label":"test",
            "args": [
                "test"
            ],
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher":[
                "$mixCompileError",
                "$mixCompileWarning",
                "$mixTestFailure"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label":"phx.server",
            "args": [
                "phx.server"
            ],
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher":[
                "$mixCompileError",
                "$mixCompileWarning"
            ],
            "group": "none"
        }
    ]
}