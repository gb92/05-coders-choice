<div class="row">
    <section class="col-sm-2"></section>
    <section class="col-sm-8" >
        <table class="table">
            <thead>
                <tr>
                    <th> Name </th>
                    <th> Purchase Price </th>
                    <th> Sale Price </th>
                    <th>  </th>
                </tr>
            </thead>
            <tbody>
                <%= for [ id, name, purchase_price, sale_price ] <- @items do %>
                <tr>
                    <td><a href ="<%= item_path(@conn, :show, id) %>"><%= name %></a></td>
                    <td><%= get_price_string(purchase_price) %></td>
                    <td><%= get_price_string(sale_price) %></td>
                    <td><a href="<%= item_path(@conn, :edit_item, id) %>">edit</a></td>             
                </tr>
                <% end %>
            </tbody>
        </table>
    </section>
</div>